<?xml version="1.0" encoding="utf-8"?>
<layout
        android:id="@+id/layout_id"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainQuestViewModel"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="view_model"
                type="com.example.listquest.ui.sidequest.SideQuestViewModel"/>
    </data>

    <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#C0C0C0"
            app:layout_constraintTop_toTopOf="parent"
            android:transitionName="shared_char_mainpage"
            tools:targetApi="lollipop">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/cthulu"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/current_boss_name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/boss"
                    android:layout_width="180dp"
                    android:layout_height="180dp"/>

            <TextView
                    android:id="@+id/current_boss_name"
                    android:text="Cthulu"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/boss"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/main_quest_title"
                    android:textSize="20dp"
                    android:text="MainQuestTitle"
                    app:layout_constraintTop_toBottomOf="@id/current_boss_name"
                    app:layout_constraintLeft_toRightOf="@id/boss"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            <ProgressBar
                    android:id="@+id/health_bar"
                    android:progressTint="#0000FF"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    app:layout_constraintLeft_toRightOf="@id/boss"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/main_quest_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>