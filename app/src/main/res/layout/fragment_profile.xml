<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDFDFE">

    <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/imageView_profile_picture"
            android:background="@drawable/ic_account_circle_black"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/edit_name"
            app:layout_constraintTop_toBottomOf="@id/imageView_profile_picture"
            android:layout_width="match_parent"
            android:background="@drawable/et_style"
            android:backgroundTint="#DDFDFE"
            android:textColorHint="@color/dark_gray"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="@={viewModel.newSideName}"
            android:layout_margin="10dp"
            android:hint="New Name"
            android:paddingStart="20dp"/>

    <Button
            android:id="@+id/btn_save"
            android:text="SAVE"
            app:layout_constraintBottom_toTopOf="@id/btn_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>

    <Button
            android:id="@+id/btn_sign_out"
            android:text="Sign Out"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>