<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_constraintTop_toTopOf="parent">

    <data>

        <import type="android.view.View" />

        <variable
                name="viewModel"
                type= "com.example.listquest.ui.sidequest.item_viewmodel.SideQuestViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

        <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@{viewModel.bossImg}"
                android:id="@+id/boss_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                android:transitionName="imageView"
                tools:src="@drawable/devil"
                android:layout_margin="10dp"/>

        <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/main_quest_title"
                app:layout_constraintLeft_toRightOf="@id/boss_img"
                app:layout_constraintRight_toLeftOf="@id/more_btn"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="@{viewModel.mainQuestTitle}"/>

        <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/more_btn"
                android:src="@drawable/more_vert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/number_of_side_quests"
                app:layout_constraintTop_toBottomOf="@id/main_quest_title"
                app:layout_constraintLeft_toRightOf="@id/boss_img"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="0dp"
                android:textColor="#000"
                android:text="@{viewModel.numOfSideQuests}"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/number_of_compleated_side_quests"
                android:text="@{viewModel.numOfCompletedSideQuest}"
                android:layout_width="0dp"
                android:textColor="#000"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/number_of_side_quests"
                app:layout_constraintLeft_toRightOf="@id/boss_img"
                app:layout_constraintRight_toRightOf="parent"/>

        <TextView
                android:id="@+id/boss_health_percent"
                android:text="@{viewModel.bossHealthPercent}"
                android:layout_width="0dp"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                app:layout_constraintTop_toBottomOf="@id/number_of_compleated_side_quests"
                app:layout_constraintLeft_toRightOf="@id/boss_img"
                app:layout_constraintRight_toRightOf="parent"/>

        <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/boss_health_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progress="@{viewModel.bossHealthPercentFloat}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/boss_health_percent"
                app:layout_constraintLeft_toRightOf="@id/boss_img"
                app:layout_constraintRight_toRightOf="parent"
                android:progressTint="@color/colorPrimary" />

        <Button
                android:text="Collect Bounty"
                app:layout_constraintTop_toBottomOf="@id/boss_health_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:onClick="@{() -> viewModel.archiveCompletedQuest()}"
                android:visibility="@{viewModel.bossHealthPercentFloat == 100 ? View.VISIBLE: View.GONE}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/com_facebook_button_background_color"
                android:layout_margin="10dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>