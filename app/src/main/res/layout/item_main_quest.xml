<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="model"
                type="com.example.listquest.models.MainQuestModel"/>
        <variable
                name="itemClickListener"
                type="com.example.listquest.ui.mainquest.BadgeBind"/>
    </data>


    <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:id="@+id/item_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:transitionName="shared_char_mainpage"
            tools:targetApi="lollipop">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/badge_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/badge"
                        android:elevation="@dimen/cardview_compat_inset_shadow"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_margin="5dp"
                        android:foregroundGravity="center_vertical"
                        android:src="@drawable/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{view-> itemClickListener.badgeOnClick(view)}"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                    android:id="@+id/main_text"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/badge_view"
                    app:layout_constraintRight_toLeftOf="@id/delete"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{model.mainQuestTitle}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
            <EditText
                    android:background="@drawable/et_style"
                    android:visibility="gone"
                    android:id="@+id/main_text_edit"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/badge_view"
                    app:layout_constraintRight_toLeftOf="@id/delete"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/delete"
                    android:text="Del"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/main_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="70dp"
                    android:layout_height="50dp"/>
            <Button
                    android:id="@+id/edit"
                    app:layout_constraintTop_toBottomOf="@id/delete"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="edit"
                    android:layout_width="70dp"
                    android:layout_height="50dp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>